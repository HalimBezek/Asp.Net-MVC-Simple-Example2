
@{
    ViewBag.Title = "detay";
    Layout = "~/Areas/Admin/Views/_LayoutPage.cshtml";

    Gsis.Models.HABERLER haber = (Gsis.Models.HABERLER)ViewBag.haber;
    
}


<script src="/Areas/Admin/ckeditor/ckeditor.js"></script>

<div class="col-md-10 content-wrapper">
    <div class="row">
        <div class="col-lg-4 ">
            <ul class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="#">Ana Sayfa</a></li>
                <li class="active">Haber Detay</li>
            </ul>
        </div>

    </div>
    <div class="content">
        <div class="main-content">
            <div class="row">
                <form class="form-horizontal" enctype="multipart/form-data" method="post" action="/Admin/haber/detay" role="form">
                    <div class="col-md-12">
                        <div class="widget">
                            <div class="widget-header">
                                <h3> Başlık : @haber.BASLIK  </h3>
                            </div>
                            <div class="widget-content">

                                <img src="@Gsis.Areas.Admin.Controllers.BaseController.Domain/Content/img/haber/p_@haber.RESIM" /><br /><br />
                                @*<p>@Html.Raw(haber.ICERIK)</p>*@

                                <textarea class="ckeditor" rows="20" name="icerik"> @haber.ICERIK</textarea>
                                <input type="hidden" name="id" value="@haber.ID" />
                            </div>
                            <div class="widget-footer">
                                <b>Eklenme Tarihi :</b>   @haber.TARIH
                            </div>
                        </div>
                        <a href="/Admin/haber/listele" class="btn btn-warning">Geri Dön</a>
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        <a href="/Admin/haber/listele?sil=@haber.ID" class="btn btn-danger">Haberi Sil</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
