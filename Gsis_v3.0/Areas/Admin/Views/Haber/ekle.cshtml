
@{
    ViewBag.Title = "ekle";
    Layout = "~/Areas/Admin/Views/_LayoutPage.cshtml";
}

<script src="/Areas/Admin/ckeditor/ckeditor.js"></script>


<div class="col-md-10 content-wrapper">
    <div class="row">
        <div class="col-lg-4 ">
            <ul class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="#">Ana Sayfa</a></li>
                <li><a href="#">Haberler</a></li>
                <li class="active">Yeni Ekle</li>
            </ul>
        </div>

    </div>


    <div class="content">
        <div class="main-header">
            <h2>Yeni Haber Ekle</h2>
                   </div>

        <div class="main-content">
            <div class="row">

                <div class="col-md-12">

                    <div class="widget">
                        <div class="widget-header"><h3><i class="fa fa-edit"></i>Haber Bilgileri</h3></div>
                        <div class="widget-content">
                            <form class="form-horizontal label-left" method="post" action="/Admin/haber/ekle" enctype="multipart/form-data" role="form">
                                <div class="form-group">
                                    <label for="phone" class="col-sm-2 control-label">Haber Resmi Seç <br /></label>
                                    <div class="col-md-10">
                                        <input type="file" id="resim" name="resim" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="phone-ex" class="col-sm-2 control-label">Başlık <br /></label>
                                    <div class="col-md-10">
                                        <input type="text" id="baslik" name="baslik" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="tax-id" class="col-sm-2 control-label">İçerik<br /></label>
                                    <div class="col-md-12">
                                        <textarea class="ckeditor" name="icerik" class="form-control"></textarea>
                                    </div>
                                </div>
                             

                                <div class="form-group">
                                    <label for="ssn" class="col-sm-2 control-label"><br /></label>
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-primary">Ekle</button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>


                </div>
            </div>

        </div>
    </div>
</div>

