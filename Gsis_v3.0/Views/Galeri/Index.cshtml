@{
    ViewBag.Title = "Galeri";
    //layouta gönderiliyor
    ViewBag.PageTitle = "Galeri";

    Layout = "~/Views/Shared/_Layout.cshtml";

    var sabit_icerik = (Gsis.Models.ICERIK)ViewBag.sabit_icerik;

}

<div id="page-header" class="style-2">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h4>Galeri</h4>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb">
                    <li><a href="/">Ana Sayfa</a></li>
                    <li class="active">Galeri</li>
                </ol>
            </div>
        </div>
    </div>
